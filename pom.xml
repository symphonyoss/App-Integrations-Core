    <profiles>
        <profile>
            <id>docker</id>
            <activation>
                <property>
                    <name>docker</name>
                    <value>true</value>
                </property>
            </activation>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>${dependency.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.symphonyoss.symphony.integrations</groupId>
                                    <artifactId>integration-github</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/libs</outputDirectory>
                                    <destFileName>integration-github.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.symphonyoss.symphony.integrations</groupId>
                                    <artifactId>integration-jira</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/libs</outputDirectory>
                                    <destFileName>integration-jira.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.symphonyoss.symphony.integrations</groupId>
                                    <artifactId>integration-universal-whi</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/libs</outputDirectory>
                                    <destFileName>integration-universal.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.symphonyoss.symphony.integrations</groupId>
                                    <artifactId>integration-zapier</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/libs</outputDirectory>
                                    <destFileName>integration-zapier.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>Provisioning</id>
            <activation>
                <property>
                    <name>build.provisioning</name>
                    <value>!false</value>
                </property>
            </activation>

            <modules>
                <module>integration-provisioning</module>
            </modules>
        </profile>

        <profile>
            <id>Artifactory</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>symphonyArtifactory</name>
                    <value>true</value>
                </property>
            </activation>

            <repositories>
                <repository>
                    <id>symphony</id>
                    <name>symphony releases</name>
                    <url>https://repo.symphony.com/artifactory/libs-release</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>snapshots</id>
                    <url>https://repo.symphony.com/artifactory/libs-snapshot</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
            </repositories>
        </profile>

    </profiles>

